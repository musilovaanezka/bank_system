@{
    ViewData["Title"] = "HomePage";
}
@model stin.Models.Ucet

<h1>Toto je vaše Titulní stránka</h1>
<h2>Váš email:</h2>
<p>@ViewBag.Username</p>
<h2>Vaše číslo účtu:</h2>
<p>@ViewBag.UcetNum</p>
<h2>@ViewBag.Mena :  @ViewBag.Zustatek</h2>

@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info" role="alert">
        @ViewBag.Message
    </div>
}
<div class="container">
    <div class="row">
        <form asp-controller="HomePage" class="m-2" method="post" asp-action="ChangeMena" enctype="multipart/form-data">
            <input type="hidden" asp-for="UcetNum" value="@ViewBag.UcetNum"></input>
            <div class="form-group row">
                <select name="Mena" class="col-lg-4 col-sm-6 m-2 form-control" asp-items="@ViewBag.SelectUsersMeny"></select>
                <input type="submit" class="btn col-lg-4 col-sm-6 btn-success m-2" name="submit" value="Změnit"></input>
            </div>
        </form>
    </div>

    <div class="row">
        <form asp-controller="HomePage" asp-action="Vklad" class="text-center col-6 m-2" method="post">
            <input type="hidden" asp-for="UcetNum" value="@ViewBag.UcetNum"></input>
            <input type="hidden" asp-for="Mena" value="@ViewBag.Mena"></input>
            <div class="form-group row">
                <button class="col-sm-12 col-lg-6 m-2 btn btn-info">Vklad</button>
            </div>
        </form>

        <form asp-controller="HomePage" asp-action="Platba" class="text-center col-6 m-2" method="post">
            <input type="hidden" asp-for="UcetNum" value="@ViewBag.UcetNum"></input>
            <input type="hidden" asp-for="Mena" value="@ViewBag.Mena"></input>
            <div class="form-group row">
                <button class="col-lg-6 col-sm-12 m-2 btn btn-warning">Platba</button>
            </div>
        </form>
    </div>

    <div class="row">
        <form asp-controller="HomePage" class="m-2" method="post" asp-action="AddUcet" enctype="multipart/form-data">
            <input type="hidden" asp-for="UcetNum" value="@ViewBag.UcetNum"></input>
            <input type="hidden" asp-for="Mena" value="@ViewBag.Mena"></input>
            <div class="form-group row">
                <select name="currency" class="form-control col-lg-4 col-sm-6 m-2"  asp-items="@ViewBag.SelectMeny"></select>
                <input type="submit" class="btn col-lg-4 col-sm-6 btn-success m-2" name="submit" value="Přidat"></input>
            </div>
        </form>
    </div>
</div>




